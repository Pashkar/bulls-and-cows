<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">

		<TextView
		    style="?android:attr/listSeparatorTextViewStyle"
		    android:text="The secret word"
		/>

		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal" 
			android:layout_marginTop="@dimen/view_top_margin"
			>
			
			<!-- Secret -->
			<LinearLayout
				android:id="@+id/SecretLayout"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="horizontal"/> 
				
			<Button 
				android:id="@+id/ShowAlphabetButton"
				android:layout_width="wrap_content" 
				android:layout_height="35px"
				android:text="@string/new_word"/>
		
		</LinearLayout>	

	<TextView
	    style="?android:attr/listSeparatorTextViewStyle"
	    android:text="Your guesses"
	/>

	<ScrollView 
		android:id="@+id/ScrollOffered"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"			
		android:scrollbars="vertical"
		android:scrollbarStyle="outsideInset"
		android:layout_weight="1.0"
		android:persistentDrawingCache="all"
		android:drawingCacheQuality="high"
	    >
	    
	   	<LinearLayout
			android:id="@+id/OfferedsLayout"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:layoutAnimation="@anim/layout_random_fade_in"
			android:orientation="vertical"
			android:gravity="center_horizontal" 
			android:layout_marginTop="@dimen/view_top_margin"
			android:persistentDrawingCache="scrolling"
			/>
			
	</ScrollView>

	<TextView
	    style="?android:attr/listSeparatorTextViewStyle"
	    android:text="Position is the question..."
	/>
	
	<!-- PosTable: To contain various number of LinearLayouts of PosTable-->
	<LinearLayout
		android:id="@+id/PositioningLayout"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:layoutAnimation="@anim/layout_random_fade_in"
		android:orientation="vertical"
		android:gravity="center_horizontal" 
		android:layout_marginTop="@dimen/view_top_margin"/>
		
</LinearLayout>
