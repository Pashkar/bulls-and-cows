<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">

		<TextView
		    style="?android:attr/listSeparatorTextViewStyle"
		    android:text="The secret word"
		/>

		<LinearLayout
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center_horizontal" 
			android:layout_marginTop="@dimen/view_top_margin"
			>
			
			<!-- Secret -->
			<LinearLayout
				android:id="@+id/SecretLayout"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:orientation="horizontal"/> 
				
			<Button 
				android:id="@+id/ShowAlphabetButton"
				android:layout_width="wrap_content" 
				android:layout_height="35px"
				android:text="@string/new_word"/>
		
		</LinearLayout>	

	<TextView
	    style="?android:attr/listSeparatorTextViewStyle"
	    android:text="Your guesses"
	/>

	<!-- To contain various number of LinearLayouts of Offered words and results of comparisons -->
	<!-- <ScrollView
		android:id="@+id/ScrollOfferedsLayout"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:persistentDrawingCache="all"
		android:drawingCacheQuality="high" 
		android:animationCache="true" 
		android:alwaysDrawnWithCache="true"
		
		android:scrollbarStyle="outsideInset"
		android:layout_below="@id/SecretLayout"
		android:layout_marginTop="@dimen/view_top_margin"> -->
	 	
	 	<!-- Offered words and comparison results -->
	 	<GridView 
	 			android:id="@+id/OfferedsGrid"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				android:layoutAnimation="@anim/layout_random_fade_in"
			    android:horizontalSpacing="@dimen/char_margin_left"
			    android:verticalSpacing="@dimen/line_top_margin"
			    android:gravity="center" 
			    android:focusable="false"
			    android:smoothScrollbar="true"
			    android:scrollbarStyle="outsideInset"
			    android:scrollbars="vertical"
			    android:scrollingCache="true"
			    android:cacheColorHint="@drawable/screen_background_white"
			    android:stretchMode="columnWidth"
			    android:layout_weight="1.0"
	    />
	 	
		<!--<LinearLayout
			android:id="@+id/OfferedsLayout"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" 
			android:orientation="vertical"
			android:gravity="center_horizontal"
			/>-->
	
	<!-- /ScrollView-->
	
	<TextView
	    style="?android:attr/listSeparatorTextViewStyle"
	    android:text="Position is the question..."
	/>
	
	<!-- PosTable: To contain various number of LinearLayouts of PosTable-->
	<LinearLayout
		android:id="@+id/PositioningLayout"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content"
		android:orientation="vertical"
					android:gravity="center_horizontal" 
		android:layout_marginTop="@dimen/view_top_margin"/>
		
</LinearLayout>
