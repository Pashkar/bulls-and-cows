<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/MainLayout"
	android:layout_width="fill_parent" 
	android:layout_height="fill_parent"
	android:orientation="vertical">
	
	<!-- Secret -->
	<LinearLayout
		android:id="@+id/SecretLayout"
		android:gravity="left"
		android:layout_width="wrap_content" 
		android:layout_height="wrap_content"
		android:layout_alignParentLeft="true" 
		android:orientation="horizontal" 
		android:layout_marginTop="@dimen/view_top_margin"/>
		
		<!-- To contain various number of LinearLayouts of Offered words and results of comparisons -->
		<ScrollView
			android:id="@+id/ScrollOfferedsLayout"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"  
			android:persistentDrawingCache="all"
			android:drawingCacheQuality="high" 
			android:animationCache="true" 
			android:alwaysDrawnWithCache="true"
			android:layout_weight="1.0"
			android:layout_marginTop="@dimen/view_top_margin">
		 	
		 	<!-- Offers -->
			<LinearLayout
				android:id="@+id/OfferedsLayout"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" 
				android:orientation="vertical"
				android:clipChildren="false"/>
		
		</ScrollView>
		
		<!-- PosTable: To contain various number of LinearLayouts of PosTable-->
		<LinearLayout
			android:id="@+id/PositioningLayout"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:layout_marginTop="@dimen/view_top_margin">
		</LinearLayout>
		
		<Button 
			android:id="@+id/ShowAlphabetButton"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:text="123"
			android:layout_alignParentBottom="true"/>
		
	<!--</RelativeLayout>-->
	
</LinearLayout>
